<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->


	<!-- 数据源定义 -->
	<beans:bean id="datasource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<beans:property name="driverClass" value="com.mysql.jdbc.Driver"></beans:property>
		<beans:property name="jdbcUrl" value="jdbc:mysql://localhost:3306/kms"></beans:property>
		<beans:property name="user" value="root"></beans:property>
		<beans:property name="password" value=""></beans:property>
		<beans:property name="initialPoolSize" value="5"></beans:property>
		<beans:property name="minPoolSize" value="5"></beans:property>
		<beans:property name="maxPoolSize" value="20"></beans:property>
	</beans:bean>

	<!-- 数据会话管理 -->
	<beans:bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<beans:property name="configLocation" value="classpath:daoconfig.xml"></beans:property>
		<beans:property name="dataSource" ref="datasource"></beans:property>
	</beans:bean>

	<!-- 扫描DAO -->
	<beans:bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<beans:property name="basePackage" value="passion.app.kms.manager.dao" />
	</beans:bean>

	<context:component-scan base-package="passion.app.kms" />
</beans>
